{
  "name": "addressfinder-shopify",
  "version": "1.2.7",
  "description": "A JavaScript Shopify plugin for AddressFinder",
  "main": "src/index.js",
  "repository": "git@github.com:AbleTech/addressfinder-shopify.git",
  "author": "@Abletech",
  "license": "MIT",
  "devDependencies": {
    "concat": "^1.0.3",
    "eslint": "^3.19.0",
    "uglify-js": "^3.0.1",
    "watch": "^1.0.2"
  },
  "scripts": {
    "lint": "eslint src/*.js",
    "concat": "concat src/*.js -o dist/shopify-v1-boot.js",
    "minify": "uglifyjs dist/shopify-v1-boot.js -m -o dist/shopify-v1-boot.min.js",
    "build": "npm run lint && npm run concat",
    "build:production": "npm run build && npm run minify",
    "watch": "watch 'npm run build' src/"
  }
}
